#!/usr/bin/env bash
#===============================================================================
# undod - Undo Watcher Daemon (Python wrapper)
#===============================================================================

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PYTHON_DAEMON="${SCRIPT_DIR}/../undod.py"

# Forward all arguments to the Python daemon
exec python3 "$PYTHON_DAEMON" "$@"
